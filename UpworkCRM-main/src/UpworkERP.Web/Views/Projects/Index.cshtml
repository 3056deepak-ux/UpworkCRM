@model IEnumerable<UpworkERP.Core.Entities.Projects.Project>

@{
    ViewData["Title"] = "Projects";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2><i class="bi bi-kanban"></i> Projects</h2>
            <a asp-action="Create" class="btn btn-warning">
                <i class="bi bi-plus-circle"></i> Add New Project
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead class="table-warning">
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Project Manager</th>
                                <th>Start Date</th>
                                <th>End Date</th>
                                <th>Budget</th>
                                <th>Status</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td><strong>@item.Name</strong></td>
                                        <td>@item.ProjectManager</td>
                                        <td>@item.StartDate.ToShortDateString()</td>
                                        <td>@(item.EndDate?.ToShortDateString() ?? "N/A")</td>
                                        <td class="text-end">@item.Budget.ToString("C")</td>
                                        <td>
                                            @switch (item.Status)
                                            {
                                                case UpworkERP.Core.Enums.ProjectStatus.Planning:
                                                    <span class="badge bg-secondary">Planning</span>
                                                    break;
                                                case UpworkERP.Core.Enums.ProjectStatus.InProgress:
                                                    <span class="badge bg-primary">In Progress</span>
                                                    break;
                                                case UpworkERP.Core.Enums.ProjectStatus.OnHold:
                                                    <span class="badge bg-warning text-dark">On Hold</span>
                                                    break;
                                                case UpworkERP.Core.Enums.ProjectStatus.Completed:
                                                    <span class="badge bg-success">Completed</span>
                                                    break;
                                                case UpworkERP.Core.Enums.ProjectStatus.Cancelled:
                                                    <span class="badge bg-danger">Cancelled</span>
                                                    break;
                                                default:
                                                    <span class="badge bg-secondary">@item.Status</span>
                                                    break;
                                            }
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Details">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Edit">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Delete">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="8" class="text-center text-muted">
                                        <i class="bi bi-info-circle"></i> No projects found. Click "Add New Project" to get started.
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
