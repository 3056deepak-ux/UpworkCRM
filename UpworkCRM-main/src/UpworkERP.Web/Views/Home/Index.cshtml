@{
    ViewData["Title"] = "Dashboard";
}

<div class="row">
    <div class="col-12">
        <h1 class="display-4"><i class="bi bi-speedometer2"></i> Dashboard</h1>
        <p class="lead">Welcome to UpworkERP - Your Enterprise Resource Planning System</p>
        <hr />
    </div>
</div>

<div class="row g-4">
    <!-- HR Module Card -->
    <div class="col-md-6 col-lg-4">
        <div class="card border-primary h-100">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0"><i class="bi bi-people"></i> HR Management</h5>
            </div>
            <div class="card-body">
                <p class="card-text">Manage employees, leave requests, and payroll operations.</p>
                <ul class="list-unstyled">
                    <li><i class="bi bi-check-circle text-success"></i> Employee Management</li>
                    <li><i class="bi bi-check-circle text-success"></i> Leave Tracking</li>
                    <li><i class="bi bi-check-circle text-success"></i> Payroll Processing</li>
                </ul>
            </div>
            <div class="card-footer">
                <a asp-controller="Employees" asp-action="Index" class="btn btn-primary btn-sm">Manage Employees</a>
            </div>
        </div>
    </div>

    <!-- Finance Module Card -->
    <div class="col-md-6 col-lg-4">
        <div class="card border-success h-100">
            <div class="card-header bg-success text-white">
                <h5 class="card-title mb-0"><i class="bi bi-cash-coin"></i> Finance</h5>
            </div>
            <div class="card-body">
                <p class="card-text">Handle accounting, transactions, and budget management.</p>
                <ul class="list-unstyled">
                    <li><i class="bi bi-check-circle text-success"></i> Accounting</li>
                    <li><i class="bi bi-check-circle text-success"></i> Transactions</li>
                    <li><i class="bi bi-check-circle text-success"></i> Budgeting</li>
                </ul>
            </div>
            <div class="card-footer">
                <a asp-controller="Accounts" asp-action="Index" class="btn btn-success btn-sm">Manage Accounts</a>
            </div>
        </div>
    </div>

    <!-- CRM Module Card -->
    <div class="col-md-6 col-lg-4">
        <div class="card border-info h-100">
            <div class="card-header bg-info text-white">
                <h5 class="card-title mb-0"><i class="bi bi-person-badge"></i> CRM</h5>
            </div>
            <div class="card-body">
                <p class="card-text">Customer relationship and lead management system.</p>
                <ul class="list-unstyled">
                    <li><i class="bi bi-check-circle text-success"></i> Customer Management</li>
                    <li><i class="bi bi-check-circle text-success"></i> Lead Tracking</i>
                    <li><i class="bi bi-check-circle text-success"></i> Sales Pipeline</li>
                </ul>
            </div>
            <div class="card-footer">
                <a asp-controller="Customers" asp-action="Index" class="btn btn-info btn-sm">Manage Customers</a>
            </div>
        </div>
    </div>

    <!-- Projects Module Card -->
    <div class="col-md-6 col-lg-4">
        <div class="card border-warning h-100">
            <div class="card-header bg-warning text-dark">
                <h5 class="card-title mb-0"><i class="bi bi-kanban"></i> Projects</h5>
            </div>
            <div class="card-body">
                <p class="card-text">Project tracking, task management, and time entries.</p>
                <ul class="list-unstyled">
                    <li><i class="bi bi-check-circle text-success"></i> Project Tracking</li>
                    <li><i class="bi bi-check-circle text-success"></i> Task Management</li>
                    <li><i class="bi bi-check-circle text-success"></i> Time Tracking</li>
                </ul>
            </div>
            <div class="card-footer">
                <a asp-controller="Projects" asp-action="Index" class="btn btn-warning btn-sm">Manage Projects</a>
            </div>
        </div>
    </div>

    <!-- Inventory Module Card -->
    <div class="col-md-6 col-lg-4">
        <div class="card border-danger h-100">
            <div class="card-header bg-danger text-white">
                <h5 class="card-title mb-0"><i class="bi bi-box-seam"></i> Inventory</h5>
            </div>
            <div class="card-body">
                <p class="card-text">Stock management, warehouses, and inventory tracking.</p>
                <ul class="list-unstyled">
                    <li><i class="bi bi-check-circle text-success"></i> Product Management</li>
                    <li><i class="bi bi-check-circle text-success"></i> Warehouse Management</li>
                    <li><i class="bi bi-check-circle text-success"></i> Stock Movements</li>
                </ul>
            </div>
            <div class="card-footer">
                <a asp-controller="Products" asp-action="Index" class="btn btn-danger btn-sm">Manage Products</a>
            </div>
        </div>
    </div>

    <!-- System Info Card -->
    <div class="col-md-6 col-lg-4">
        <div class="card border-secondary h-100">
            <div class="card-header bg-secondary text-white">
                <h5 class="card-title mb-0"><i class="bi bi-gear"></i> System</h5>
            </div>
            <div class="card-body">
                <p class="card-text">System administration and configuration.</p>
                <ul class="list-unstyled">
                    <li><i class="bi bi-check-circle text-success"></i> User Management</li>
                    <li><i class="bi bi-check-circle text-success"></i> Role-Based Access</li>
                    <li><i class="bi bi-check-circle text-success"></i> Activity Logs</li>
                </ul>
            </div>
            <div class="card-footer">
                <a href="#" class="btn btn-secondary btn-sm">System Settings</a>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="alert alert-info">
            <h5 class="alert-heading"><i class="bi bi-info-circle"></i> Getting Started</h5>
            <p>This is your central dashboard for managing all aspects of your business. Use the navigation menu above to access different modules.</p>
            <hr>
            <p class="mb-0"><strong>Quick Tips:</strong> Navigate through modules using the top menu, manage entities, and track your business operations in real-time.</p>
        </div>
    </div>
</div>
