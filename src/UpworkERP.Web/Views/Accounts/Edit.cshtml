@model UpworkERP.Core.Entities.Finance.Account

@{
    ViewData["Title"] = "Edit Account";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2><i class="bi bi-pencil-square"></i> Edit Account</h2>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="CreatedAt" />
                    <input type="hidden" asp-for="CreatedBy" />

                    <div class="mb-3">
                        <label asp-for="AccountNumber" class="form-label"></label>
                        <input asp-for="AccountNumber" class="form-control" placeholder="e.g., ACC-001" />
                        <span asp-validation-for="AccountNumber" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="AccountName" class="form-label"></label>
                        <input asp-for="AccountName" class="form-control" placeholder="Enter account name" />
                        <span asp-validation-for="AccountName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Type" class="form-label"></label>
                        <select asp-for="Type" class="form-select" asp-items="Html.GetEnumSelectList<UpworkERP.Core.Enums.AccountType>()">
                        </select>
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Balance" class="form-label"></label>
                            <input asp-for="Balance" class="form-control" type="number" step="0.01" placeholder="0.00" />
                            <span asp-validation-for="Balance" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Currency" class="form-label"></label>
                            <input asp-for="Currency" class="form-control" placeholder="USD" />
                            <span asp-validation-for="Currency" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-warning">
                            <i class="bi bi-save"></i> Save Changes
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
