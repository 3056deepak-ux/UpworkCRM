@model IEnumerable<UpworkERP.Core.Entities.Finance.Account>

@{
    ViewData["Title"] = "Accounts";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2><i class="bi bi-bank"></i> Accounts</h2>
            <a asp-action="Create" class="btn btn-info">
                <i class="bi bi-plus-circle"></i> Create New
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                @if (Model != null && Model.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>
                                        <a asp-action="Index" asp-route-sortOrder="name">
                                            Account Name <i class="bi bi-arrow-down-up"></i>
                                        </a>
                                    </th>
                                    <th>
                                        <a asp-action="Index" asp-route-sortOrder="number">
                                            Account Number <i class="bi bi-arrow-down-up"></i>
                                        </a>
                                    </th>
                                    <th>
                                        <a asp-action="Index" asp-route-sortOrder="currency">
                                            Currency <i class="bi bi-arrow-down-up"></i>
                                        </a>
                                    </th>
                                    <th>
                                        <a asp-action="Index" asp-route-sortOrder="balance">
                                            Balance <i class="bi bi-arrow-down-up"></i>
                                        </a>
                                    </th>
                                    <th>
                                        <a asp-action="Index" asp-route-sortOrder="type">
                                            Type <i class="bi bi-arrow-down-up"></i>
                                        </a>
                                    </th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.AccountName</td>
                                        <td>@item.AccountNumber</td>
                                        <td>@item.Currency</td>
                                        <td>
                                            @if (item.Balance < 0)
                                            {
                                                <span class="text-danger">@item.Balance.ToString("C")</span>
                                            }
                                            else
                                            {
                                                <span>@item.Balance.ToString("C")</span>
                                            }
                                        </td>
                                        <td>
                                            @if (item.Type == UpworkERP.Core.Enums.AccountType.Asset)
                                            {
                                                <span class="badge bg-success">Asset</span>
                                            }
                                            else if (item.Type == UpworkERP.Core.Enums.AccountType.Liability)
                                            {
                                                <span class="badge bg-warning">Liability</span>
                                            }
                                            else if (item.Type == UpworkERP.Core.Enums.AccountType.Equity)
                                            {
                                                <span class="badge bg-info">Equity</span>
                                            }
                                            else if (item.Type == UpworkERP.Core.Enums.AccountType.Revenue)
                                            {
                                                <span class="badge bg-primary">Revenue</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">Expense</span>
                                            }
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Details">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning" title="Edit">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Delete">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="alert alert-info" role="alert">
                        <i class="bi bi-info-circle"></i> No accounts found. <a asp-action="Create" class="alert-link">Create your first account</a>.
                    </div>
                }
            </div>
        </div>
    </div>
</div>
