@model UpworkERP.Core.Entities.CRM.Customer

@{
    ViewData["Title"] = "Customer Details";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2><i class="bi bi-person-badge"></i> Customer Details</h2>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="bi bi-pencil"></i> Edit
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="bi bi-info-circle"></i> Customer Information</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">ID</dt>
                    <dd class="col-sm-9">@Model.Id</dd>

                    <dt class="col-sm-3">Name</dt>
                    <dd class="col-sm-9">@Model.Name</dd>

                    <dt class="col-sm-3">Email</dt>
                    <dd class="col-sm-9">
                        <a href="mailto:@Model.Email">@Model.Email</a>
                    </dd>

                    <dt class="col-sm-3">Phone Number</dt>
                    <dd class="col-sm-9">
                        <a href="tel:@Model.PhoneNumber">@Model.PhoneNumber</a>
                    </dd>

                    <dt class="col-sm-3">Company</dt>
                    <dd class="col-sm-9">@Model.Company</dd>

                    <dt class="col-sm-3">Address</dt>
                    <dd class="col-sm-9">@Model.Address</dd>

                    <dt class="col-sm-3">Status</dt>
                    <dd class="col-sm-9">
                        @if (Model.Status == UpworkERP.Core.Enums.CustomerStatus.Active)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else if (Model.Status == UpworkERP.Core.Enums.CustomerStatus.Inactive)
                        {
                            <span class="badge bg-secondary">Inactive</span>
                        }
                        else
                        {
                            <span class="badge bg-warning">Suspended</span>
                        }
                    </dd>

                    <dt class="col-sm-3">Created At</dt>
                    <dd class="col-sm-9">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</dd>

                    <dt class="col-sm-3">Created By</dt>
                    <dd class="col-sm-9">@Model.CreatedBy</dd>

                    @if (Model.UpdatedAt.HasValue)
                    {
                        <dt class="col-sm-3">Updated At</dt>
                        <dd class="col-sm-9">@Model.UpdatedAt.Value.ToString("yyyy-MM-dd HH:mm:ss")</dd>
                    }

                    @if (!string.IsNullOrEmpty(Model.UpdatedBy))
                    {
                        <dt class="col-sm-3">Updated By</dt>
                        <dd class="col-sm-9">@Model.UpdatedBy</dd>
                    }
                </dl>
            </div>
        </div>
    </div>
</div>
