@model UpworkERP.Core.Entities.Inventory.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="row">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2><i class="bi bi-box-seam"></i> Product Details</h2>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="bi bi-pencil"></i> Edit
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="bi bi-info-circle"></i> Product Information</h5>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">ID</dt>
                    <dd class="col-sm-9">@Model.Id</dd>

                    <dt class="col-sm-3">SKU</dt>
                    <dd class="col-sm-9"><span class="badge bg-secondary">@Model.SKU</span></dd>

                    <dt class="col-sm-3">Name</dt>
                    <dd class="col-sm-9">@Model.Name</dd>

                    <dt class="col-sm-3">Description</dt>
                    <dd class="col-sm-9">@Model.Description</dd>

                    <dt class="col-sm-3">Category</dt>
                    <dd class="col-sm-9">@Model.Category</dd>

                    <dt class="col-sm-3">Unit Price</dt>
                    <dd class="col-sm-9">@Model.UnitPrice.ToString("C")</dd>

                    <dt class="col-sm-3">Quantity In Stock</dt>
                    <dd class="col-sm-9">
                        @if (Model.QuantityInStock <= Model.ReorderLevel && Model.QuantityInStock > 0)
                        {
                            <span class="badge bg-warning">@Model.QuantityInStock (Low Stock)</span>
                        }
                        else if (Model.QuantityInStock == 0)
                        {
                            <span class="badge bg-danger">@Model.QuantityInStock (Out of Stock)</span>
                        }
                        else
                        {
                            <span class="badge bg-success">@Model.QuantityInStock</span>
                        }
                    </dd>

                    <dt class="col-sm-3">Reorder Level</dt>
                    <dd class="col-sm-9">@Model.ReorderLevel</dd>

                    <dt class="col-sm-3">Status</dt>
                    <dd class="col-sm-9">
                        @if (Model.Status == UpworkERP.Core.Enums.ProductStatus.Active)
                        {
                            <span class="badge bg-success">Active</span>
                        }
                        else if (Model.Status == UpworkERP.Core.Enums.ProductStatus.Inactive)
                        {
                            <span class="badge bg-warning">Inactive</span>
                        }
                        else if (Model.Status == UpworkERP.Core.Enums.ProductStatus.OutOfStock)
                        {
                            <span class="badge bg-danger">Out of Stock</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Discontinued</span>
                        }
                    </dd>

                    <dt class="col-sm-3">Created At</dt>
                    <dd class="col-sm-9">@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm:ss")</dd>

                    <dt class="col-sm-3">Created By</dt>
                    <dd class="col-sm-9">@Model.CreatedBy</dd>

                    @if (Model.UpdatedAt.HasValue)
                    {
                        <dt class="col-sm-3">Updated At</dt>
                        <dd class="col-sm-9">@Model.UpdatedAt.Value.ToString("yyyy-MM-dd HH:mm:ss")</dd>
                    }

                    @if (!string.IsNullOrEmpty(Model.UpdatedBy))
                    {
                        <dt class="col-sm-3">Updated By</dt>
                        <dd class="col-sm-9">@Model.UpdatedBy</dd>
                    }
                </dl>
            </div>
        </div>
    </div>
</div>
